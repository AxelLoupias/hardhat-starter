{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"paths": {
			"@contracts/*": [
				"./typechain/*",
				"./typechain/index.ts"
			],
			"@scripts/*": [
				"./scripts/index.ts"
			]
		}
	},
	"ts-node": {
		"require": [
			"tsconfig-paths/register"
		]
	}
}